{
  "compilerOptions": {
    "resolveJsonModule": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "sourceRoot": "src",
    "inlineSourceMap": true,
    "skipLibCheck": true,
    "checkJs": false,
    "types": ["jest"],
    "typeRoots": ["src/constants/typings/**/*.ts,src/constants/action-types", "node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@assets/*": [
        "assets/*"
      ],
      "@components": [
        "src/components/index.ts"
      ],
      "@constants": [
        "src/constants/index.ts"
      ],
      "@services": [
        "src/services/index.ts"
      ],
      "@screens/*": [
        "src/screens/*"
      ],
      "@routes": [
        "src/routes/index.tsx"
      ],
      "@state/*": [
        "src/state/*"
      ],
      "@middlewares": [
        "src/middlewares/index.ts"
      ],
      "@utils": [
        "src/utils/index.ts"
      ],
      "@config": [
        "src/config/index.ts"
      ],
      "@typings/*": [
        "src/constants/typings/*"
      ]
    },
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "__tests__/**/*-test.ts"
  ],
}